<div class = 'event-dashboard'>
  <h2>YEARLY EVENT</h2>
  <div class = 'yearly-event'>
    <table>
      <thead>
      <tr>
        <th>YEAR</th>
        <th>No. of Events</th>
      </tr>
      </thead>
      <tbody>
      {% for year,event_no in yearly %}
        <tr>
          <td>{{ year }}</td>
          <td>{{ event_no }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

  <h2>Quarterly EVENT</h2>
  <div class = 'quarterly-event'>
    <table>
      <thead>
      <tr>
        <th>YEAR</th>
        <th>Quarter</th>
        <th>No. of Events</th>
      </tr>
      </thead>
      <tbody>
        {% for year,quarter in quarterly %}
          {% for key,event in quarter %}
            <tr>
              {% if loop.first %}
                <td rowspan = "{{ loop.length }}">{{ year }}</td>
              {% endif %}
              <td>{{ quarter_name[key] }}</td>
              <td>{{ event }}</td>
            </tr>
          {% endfor %}
        {% endfor %}
      </tbody>
    </table>
  </div>

  <h2>TYPE WISE EVENT</h2>
  <div class = 'type-wise-event'>
    <table>
      <thead>
      <tr>
        <th>Type</th>
        <th>No. of Events</th>
      </tr>
      </thead>
      <tbody>
      {% for item in type_wise_event %}
        <tr>
          <td>{{ item.name }}</td>
          <td>{{ item.no_of_events }}</td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

</div>
